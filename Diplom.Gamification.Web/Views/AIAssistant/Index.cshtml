@model GPTRequest

<form asp-controller="AIAssistant" asp-action="Index" method="post">

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Задать вопрос</label>
        <input asp-for="Request" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>

</form>
<div markdown="1">
    @Html.Raw(ViewBag.Answer)

</div>
