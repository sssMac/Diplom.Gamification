@model List<CourseViewModel>

@{
    Layout = "../Shared/_Layout";
}

<div class="container mt-4">

    <div class="action-panel">
        <a asp-action="NewCourse" asp-controller="Creator" class="btn btn-primary" style="background-color:black !important;">Создать</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem; margin: 10px;">
                <img src="@item.ImgLink">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title flex-grow-1">@item.Title</h5>

                    <a asp-action="Course" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-primary align-self-start">Пройти</a>
                </div>
            </div>
        }
    </div>
</div>