@model List<CourseViewModel>

@{
    Layout = "../Shared/_Layout";
}

<div class="container mt-4">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem; margin: 10px;">
                <img src="@item.ImgLink">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title flex-grow-1" >@item.Title</h5>

                    <div class="d-flex flex-row">
                        <a asp-action="Course" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-primary align-self-start"> <i class="fas fa-play"></i></a>

                        <h6 class="d-flex w-100 justify-content-end align-self-end" style="color: gray;">@item.Passed/@item.Lessons.Count()</h6>
                    </div>
                    
                </div>
            </div>
        }
    </div>
</div>
